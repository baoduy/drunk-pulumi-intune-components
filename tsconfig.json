{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./bin",
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "inlineSourceMap": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": false
  },
  "exclude": [
    "node_modules",
    "**/__tests__"
  ],
  "files": [
    "src/DeviceConfiguration.ts",
    "src/DeviceCustomConfiguration.ts",
    "src/DeviceCustomConfigurationImporter.ts",
    "src/IntuneManagement.ts",
    "src/base/BaseComponent.ts",
    "src/base/BaseProvider.ts",
    "src/base/index.ts",
    "src/devices/CompliancePolicyAssignment.ts",
    "src/devices/ConfigurationPolicy.ts",
    "src/devices/ConfigurationPolicyAssignment.ts",
    "src/devices/CorporateDeviceIdentifiers.ts",
    "src/devices/CustomPolicy.ts",
    "src/devices/DefaultPlatformRestrictions.ts",
    "src/devices/DeviceCatalogs.ts",
    "src/devices/MacCompliancePolicy.ts",
    "src/devices/helpers/createMacAntivirusPayload.ts",
    "src/devices/helpers/createMacCompliancePayload.ts",
    "src/devices/helpers/createMacCustomConfig.ts",
    "src/devices/helpers/createMacDiskEncryptionPayload.ts",
    "src/devices/helpers/createMacFirewallPayload.ts",
    "src/devices/helpers/index.ts",
    "src/devices/index.ts",
    "src/devices/types.ts",
    "src/helpers.ts",
    "src/index.ts",
    "src/types.ts"
  ]
}